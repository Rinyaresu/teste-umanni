<div class="comment-<%= comment.id %> border border-indigo-600 my-5" >
  <%= comment.user.email %></ br>
  <span>Posted: <%= time_ago_in_words(comment.updated_at) %></span>

  <% if current_user == comment.user %>
    <%= button_to "Delete", [post, comment], method: :delete, data: { confirm: "Are you sure?" }, class: 'text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2'%>
  <% end %>
  </ br>
  <%= comment.content %>
</div>
